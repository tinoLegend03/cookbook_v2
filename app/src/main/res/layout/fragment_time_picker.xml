<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <NumberPicker
        android:id="@+id/picker_minuti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/picker_secondi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/picker_secondi"
        android:layout_width="76dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/picker_minuti"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minuti"
        app:layout_constraintBottom_toTopOf="@+id/picker_minuti"
        app:layout_constraintEnd_toEndOf="@+id/picker_minuti"
        app:layout_constraintStart_toStartOf="@+id/picker_minuti" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secondi"
        app:layout_constraintBottom_toTopOf="@+id/picker_secondi"
        app:layout_constraintEnd_toEndOf="@+id/picker_secondi"
        app:layout_constraintStart_toStartOf="@+id/picker_secondi" />

</androidx.constraintlayout.widget.ConstraintLayout>