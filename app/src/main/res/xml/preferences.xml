<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        android:key="theme"
        android:title="Choose the theme"
        android:summary="Choose to pass in dark mode or not"
        app:useSimpleSummaryProvider="true"
        android:entries="@array/choose_theme"
        android:entryValues="@array/choose_theme"
        app:defaultValue="System"
        android:dialogTitle="Choose theme"/>

    <Preference
        android:key="pref_system_notification"
        android:title="Settings Notification"
        android:orderInCategory="2">
    </Preference>

</PreferenceScreen>